section#seminar-schedule
  .schedule
    h1 #{ content.seminarSchedule.title }
    .container
      .row
        each slot in content.seminarSchedule.slots
          .col-md-6
            h3 #{ slot.name }
            table.table.table-striped.table-bordered.table-condensed
              tbody
                each item in slot.items
                    tr
                      th #{ item.speaker }
                      td !{ item.text } </br> !{ item.translation }
                        if item.place
                          </br> <small> #{item.place}</small>



